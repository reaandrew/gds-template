{% extends "policies/policy.njk" %}

{% block policy_content %}
<h1 class="govuk-heading-l">{{ policy_title }}</h1>
<p class="govuk-body">This page shows the count of Auto Scaling Groups with no instances by team.</p>

{% if data %}
    <table class="govuk-table">
        <thead class="govuk-table__head">
            <tr class="govuk-table__row">
                <th class="govuk-table__header">Team</th>
                <th class="govuk-table__header">Count of Empty ASGs</th>
            </tr>
        </thead>
        <tbody class="govuk-table__body">
            {% for item in data %}
                <tr class="govuk-table__row">
                    <td class="govuk-table__cell">{{ item.team }}</td>
                    <td class="govuk-table__cell">{{ item.count }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% else %}
    <p class="govuk-body">No empty Auto Scaling Groups found.</p>
{% endif %}
{% endblock %}